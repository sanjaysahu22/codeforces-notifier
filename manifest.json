{
  "manifest_version": 3,
  "name": "Codeforces Notifier with Email",
  "version": "1.0",
  "description": "CF contest reminders + email alerts",
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://codeforces.com/*",
    "https://your-worker.your-subdomain.workers.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon128.png"
  }
}